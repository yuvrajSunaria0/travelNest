<%- include('../partials/head') %>
  </head>

  <body class="bg-gray-100 antialiased text-gray-800">

    <%- include('../partials/nav') %>

      <main class="min-h-screen flex items-center justify-center ">
        <div class="max-w-md w-full bg-white rounded-2xl shadow-lg p-8 space-y-6">
          <h1 class=" font-extrabold text-center text-gray-900">
            Create Your Account
          </h1>

          <form action="/signup" method="POST" class="space-y-5">

            <!-- Name Fields -->
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <div class="mb-2">
                
                  <% if( errors.length>0){%>
                    <div>
                      <strong class="font-bold">Error</strong>
                      <span>
                        <%errors.forEach(error=>{ %>
                          <li class="list-none text-red-500 ">
                            <%= error %>
                          </li>
                          <%})%>
                      </span>
                    </div>
                    <%}%>
                      <label for="firstName" class="block text-sm font-medium mb-1">First Name<span
                          class="text-red-500">*</span></label>
                      <input id="firstName" name="firstName" type="text"
                        value="<%= oldInput.firstName ? oldInput.firstName : '' %>" required placeholder="John"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" />
              </div>
              <div class="mb-2">
                <label for="lastName" class="block text-sm font-medium mb-1">Last Name</label>
                <input value="<%= typeof oldInput !== 'undefined' ? oldInput.lastName : '' %>" id="lastName"
                  name="lastName" type="text" placeholder="Doe"
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" />
              </div>
            </div>

            <!-- Email -->
            <div class="mb-2">
              <label for="email" class="block text-sm font-medium mb-1">Email<span class="text-red-500">*</span></label>
              <input value="<%= typeof oldInput !== 'undefined' ? oldInput.email : '' %>" id="email" name="email"
                type="email" required placeholder="you@example.com"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" />
            </div>

            <!-- Passwords -->
              <!-- value="<%= typeof oldInput !== 'undefined' ? oldInput.password : '' %>"  -->
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <div class="mb-2">
                <label for="password" class="block text-sm font-medium mb-1">Password<span
                    class="text-red-500">*</span></label>
                 <input id="password" 
                
                  name="password" type="password" required placeholder="••••••••"
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" />
              </div>
              <div class="mb-2">
                  <!-- value="<%= typeof oldInput !== 'undefined' ? oldInput.confirmPassword : '' %>"  -->
                <label for="confirmPassword" class="block text-sm font-medium mb-1">Confirm Password<span
                    class="text-red-500">*</span></label>
              <input
              id=" confirmPassword" name="confirmPassword" type="password" required placeholder="••••••••"
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" />
              </div>
            </div>

            <!-- User Type Radios -->
            <fieldset class="space-y-2">
              <legend class="text-sm font-medium">I am a<span class="text-red-500">*</span></legend>
              <div class="flex items-center mb-2  space-x-6">
                <label class="flex items-center">
                  <input 
                  <% if( oldInput.userType ==="guest" ){%>
                  checked
                    <% }%>
                    type="radio"
                    name="userType"
                    value="guest"

                    class="form-radio h-4 w-4 mr-1 text-red-500"/>
                    <span class="mr-2 ">Guest</span>
                </label>
                <label class="flex items-center">
                  <input 
                  <% if( oldInput.userType ==="host" ){%>
                  checked
                    <% }%>
                  type="radio" name="userType" value="host" class="form-radio h-4 w-4 mr-1 text-red-500" />
                  <span class="ml-2">Host</span>
                </label>
              </div>
            </fieldset>

            <!-- Terms Checkbox -->
            <div class="flex items-center   mb-2">
              <div class="mr-2">
                <input id="terms" name="terms" type="checkbox" required class="form-checkbox h-5 w-5 text-red-500" />
              </div>
              <label for="terms" class="ml-3 text-sm">
                I agree to the <a href="/terms" class="text-red-500 hover:underline">terms and conditions</a><span
                  class="text-red-500">*</span>
              </label>
            </div>

            <!-- Submit -->
            <div>
              <button type="submit"
                class="w-full flex justify-center py-3 px-4 bg-red-500 text-white font-semibold rounded-lg shadow hover:bg-red-600 transition duration-200">
                Register
              </button>
            </div>

          </form>
        </div>
      </main>
  </body>

  </html>