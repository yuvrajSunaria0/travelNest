<%- include('../partials/head') %>
</head>

<%- include('../partials/nav') %>
<body class="bg-gray-50 text-gray-900">

  <!-- Hero Section -->
  <section
    class="min-h-screen flex flex-col justify-center items-center bg-cover bg-center"
    style="background-image: url('https://images.unsplash.com/photo-1568605114967-8130f3a36994?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');"
  >
    <div class=" bg-opacity-90 p-12 rounded-3xl shadow-2xl max-w-3xl text-center">
      <h1 class=" text-3xl font-bold text-indigo-700 mb-4">Find Your Perfect Getaway</h1>
      <p class="text-lg text-gray-400 mb-6">
        Discover unique places to stay and explore the world with TravelNest.
      </p>
      <a
        href="/login"
        class="inline-block px-8 py-4 bg-gradient-to-r from-purple-500 to-indigo-500 text-white rounded-full font-semibold shadow-lg hover:from-purple-600 hover:to-indigo-600 transition-colors duration-300"
      >
        Browse Stays
      </a>
    </div>
  </section>

  <!-- “Why TravelNest?” Features Section -->
  <section class="py-16 px-6 md:px-20 bg-gradient-to-b from-indigo-50 to-white">
    <h2 class="text-3xl font-bold text-center text-indigo-700 mb-12">Why TravelNest?</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
      <div class="bg-white p-8 rounded-2xl shadow-xl hover:shadow-2xl transition-shadow duration-300">
        <img
          src="https://images.unsplash.com/photo-1662026025913-c038e4d917f9?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
          alt="Unique Stay"
          class="w-full h-48 object-cover rounded-xl mb-4"
        />
        <h3 class="text-xl font-semibold text-gray-800 mb-2">Unique Listings</h3>
        <p class="text-gray-600">
          Stay in one-of-a-kind places—treehouses, castles, villas, and more—scattered in cities and nature.
        </p>
      </div>

      <div class="bg-white p-8 rounded-2xl shadow-xl hover:shadow-2xl transition-shadow duration-300">
        <img
          src="https://images.unsplash.com/photo-1539571696357-5a69c17a67c6?q=80&w=1374&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
          alt="Trusted Hosts"
          class="w-full h-48 object-cover rounded-xl mb-4"
        />
        <h3 class="text-xl font-semibold text-gray-800 mb-2">Trusted Hosts</h3>
        <p class="text-gray-600">
           Our hosts are highly rated by travelers like you—ensuring every stay is comfortable and safe.
        </p>
      </div>

      <div class="bg-white p-8 rounded-2xl shadow-xl hover:shadow-2xl transition-shadow duration-300">
        <img
          src="https://images.unsplash.com/photo-1537511446984-935f663eb1f4?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
          alt="Easy Booking"
          class="w-full h-48 object-cover rounded-xl mb-4"
        />
        <h3 class="text-xl font-semibold text-gray-800 mb-2">Easy Booking</h3>
        <p class="text-gray-600">
          Simple, secure reservations with 24/7 support—get confirmation in seconds and enjoy peace of mind.
        </p>
      </div>
    </div>
  </section>

  <!-- Popular Destinations Gallery -->
  <section class="py-16 px-6 md:px-20 bg-white">
    <h2 class="text-3xl font-bold text-center text-indigo-700 mb-12">Popular Destinations</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Card 1 -->
      <div class="relative group rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-shadow duration-300">
        <img
          src="https://images.unsplash.com/photo-1484821582734-6c6c9f99a672?q=80&w=1633&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
          alt="Beach Paradise"
          class="w-full h-56 object-cover group-hover:scale-105 transition-transform duration-500"
        />
        <div class="absolute bottom-0 w-full bg-gradient-to-t from-black/60 to-transparent text-white p-4">
          <h3 class="text-xl font-semibold">Beach Paradise</h3>
          <p class="text-sm">Maldives</p>
        </div>
      </div>

      <!-- Card 2 -->
      <div class="relative group rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-shadow duration-300">
        <img
          src="https://images.unsplash.com/photo-1631183717450-e2461860311e?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
          alt="Mountain Retreat"
          class="w-full h-56 object-cover group-hover:scale-105 transition-transform duration-500"
        />
        <div class="absolute bottom-0 w-full bg-gradient-to-t from-black/60 to-transparent text-white p-4">
          <h3 class="text-xl font-semibold">Mountain Retreat</h3>
          <p class="text-sm">Swiss Alps</p>
        </div>
      </div>

      <!-- Card 3 -->
      <div class="relative group rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-shadow duration-300">
        <img
          src="https://plus.unsplash.com/premium_photo-1664362416407-c4cdd10c04c0?q=80&w=1374&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
          alt="City Escape"
          class="w-full h-56 object-cover group-hover:scale-105 transition-transform duration-500"
        />
        <div class="absolute bottom-0 w-full bg-gradient-to-t from-black/60 to-transparent text-white p-4">
          <h3 class="text-xl font-semibold">City Escape</h3>
          <p class="text-sm">New York</p>
        </div>
      </div>

      <!-- Card 4 -->
      <div class="relative group rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-shadow duration-300">
        <img
          src="https://images.unsplash.com/photo-1633830902223-727413dfad8f?q=80&w=1632&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
          alt="Forest Hideaway"
          class="w-full h-56 object-cover group-hover:scale-105 transition-transform duration-500"
        />
        <div class="absolute bottom-0 w-full bg-gradient-to-t from-black/60 to-transparent text-white p-4">
          <h3 class="text-xl font-semibold">Forest Hideaway</h3>
          <p class="text-sm">Pacific Northwest</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="py-16 px-6 md:px-20 bg-indigo-50">
    <h2 class="text-3xl font-bold text-center text-indigo-700 mb-12">What Our Guests Say</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Testimonial 1 -->
      <div class="bg-white p-8 rounded-2xl shadow-md hover:shadow-lg transition-shadow duration-300">
        <p class="text-gray-700 italic mb-4">
          “TravelNest made our honeymoon unforgettable. The villa was stunning, and the host was incredibly attentive.”
        </p>
        <div class="flex items-center">
          <img
            src="https://randomuser.me/api/portraits/women/44.jpg"
            alt="Guest Photo"
            class="w-12 h-12 rounded-full mr-4 object-cover"
          />
          <div>
            <h4 class="text-lg font-semibold text-gray-800">Emily R.</h4>
            <p class="text-sm text-gray-500">Verified Guest</p>
          </div>
        </div>
      </div>

      <!-- Testimonial 2 -->
      <div class="bg-white p-8 rounded-2xl shadow-md hover:shadow-lg transition-shadow duration-300">
        <p class="text-gray-700 italic mb-4">
          “I booked a cabin in the woods and felt at home immediately. Highly recommend for anyone looking to unplug.”
        </p>
        <div class="flex items-center">
          <img
            src="https://randomuser.me/api/portraits/men/32.jpg"
            alt="Guest Photo"
            class="w-12 h-12 rounded-full mr-4 object-cover"
          />
          <div>
            <h4 class="text-lg font-semibold text-gray-800">Michael S.</h4>
            <p class="text-sm text-gray-500">Verified Guest</p>
          </div>
        </div>
      </div>

      <!-- Testimonial 3 -->
      <div class="bg-white p-8 rounded-2xl shadow-md hover:shadow-lg transition-shadow duration-300">
        <p class="text-gray-700 italic mb-4">
          “Booking was a breeze, and the apartment was perfect for our family vacation. Five stars!”
        </p>
        <div class="flex items-center">
          <img
            src="https://randomuser.me/api/portraits/women/55.jpg"
            alt="Guest Photo"
            class="w-12 h-12 rounded-full mr-4 object-cover"
          />
          <div>
            <h4 class="text-lg font-semibold text-gray-800">Sarah K.</h4>
            <p class="text-sm text-gray-500">Verified Guest</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Call-to-Action Banner -->
  <section
    class="py-20 text-center text-white bg-gradient-to-r from-purple-600 to-indigo-600"
  >
    <h2 class="text-4xl font-bold mb-4">Ready to Explore?</h2>
    <p class="text-lg mb-6">
      Join thousands of travelers who’ve found their dream stays with TravelNest.
    </p>
    <a
      href="/signup"
      class="inline-block px-10 py-4 bg-white text-indigo-600 font-semibold rounded-full shadow-lg hover:bg-gray-100 transition-colors duration-300"
    >
      Get Started
    </a>
  </section>

  <!-- Footer -->
  <footer class="bg-gray-800 text-gray-300 py-8">
    <div class="container mx-auto px-6 md:px-20 grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- About -->
      <div>
        <h3 class="text-xl font-semibold text-white mb-4">About TravelNest</h3>
        <p class="text-gray-400">
          TravelNest is your gateway to unforgettable travel experiences worldwide.
        </p>
      </div>

      <!-- Links -->
      <div>
        <h3 class="text-xl font-semibold text-white mb-4">Quick Links</h3>
        <ul class="space-y-2">
          <li><a href="/" class="hover:underline">Browse Stays</a></li>
          <li><a href="/signup" class="hover:underline">Become a Host</a></li>
          
        </ul>
      </div>

      <!-- Social -->
      <div>
        <h3 class="text-xl font-semibold text-white mb-4">Follow Us</h3>
        <div class="flex space-x-4">
          <a href="#" class="hover:text-white"><i class="fab fa-facebook-f">facebook</i></a>
          <a href="#" class="hover:text-white"><i class="fab fa-twitter">x</i></a>
          <a href="#" class="hover:text-white"><i class="fab fa-instagram">instagram</i></a>
          <a href="#" class="hover:text-white"><i class="fab fa-linkedin-in">linkdin</i></a>
        </div>
      </div>
    </div>

    <div class="mt-8 text-center text-gray-500 text-sm">
      &copy; <%= new Date().getFullYear() %> TravelNest. All rights reserved.
    </div>
  </footer>
</body>
</html>
